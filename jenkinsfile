pipeline {
    agent any
    stages {
        stage('git pull') { 
            steps {
                git 'https://github.com/akki4713/studentapp.ui.git'
            }
        }
        stage('mvn build') { 
            steps {
                sh 'mvn clean package'
            }
        }
        stage('sonar test') { 
            steps {
                echo "Testing with SonarQube"
                sh '''
               mvn clean verify sonar:sonar \
                -Dsonar.projectKey=demo \
                -Dsonar.host.url=http://3.27.193.71:9000 \
                -Dsonar.login=sqp_595b0bec9f5afa55ebe2ab955df0fd9e17d3ffed                
                
                        '''
            }
         }
         stage('deploy') {
            steps {
                echo "deploy on tomcat "
                sh '''
                cp -r  /var/lib/jenkins/workspace/demo/target/*.war /opt/apache-tomcat-8.5.99/webapps/
                '''
            }
         }
    }
}


